@page "/"
@using studbud.Client.Widgets
@inject IDialogService Dialog
@layout RootLayout

<PageTitle>Home</PageTitle>

<MudGrid Spacing="10"  Justify="Justify.Center">
    <MudItem >
        <MudStack Spacing="1"  Class="ml-6 mt-11" >
            <MudText Typo="Typo.h2" Color="Color.Primary" Style="font-weight: bold;" >
                The <span style="color: color-mix();">Study Tool</span>
            </MudText>
            <MudText  Typo="Typo.h2" Color="Color.Primary" Style="font-weight: bold;">That Everyone</MudText>
            <MudText  Typo="Typo.h2" Color="Color.Primary" Style="font-weight: bold;">Needs</MudText>

            <MudText Typo="Typo.body1" Class="mt-5">
                StudBud is an all in one top of the line study tool that runs on the web,

            </MudText>
            <MudText Typo="Typo.body1" Class="mt-1">

                It comes fully packed with a large set of ai features to help.

            </MudText>
            <MudText Typo="Typo.body1" Class="mt-1">

                Best of all it can run anywhere
            </MudText>
        </MudStack>

        <MudStack Row="true" Spacing="2" Class="ml-6 mt-11" Justify="Justify.FlexStart">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="OpenLoginDialog">
                Login
            </MudButton>
            <MudButton Variant="Variant.Outlined" Color="Color.Primary" OnClick="OpenSignupDialog">
                Register
            </MudButton>
        </MudStack>
    </MudItem>

    <MudItem Class="mt-11">
        <MudStack Justify="Justify.FlexStart">
                <div style="position: relative; width: 400px; height: 400px; margin:auto;">
                <!-- Top image -->
                <img src="images/science.png" style="position: absolute; top: 0; left: 50%; transform: translateX(-50%); width:80px;" />
                <!-- Right image -->
                <img src="images/notes.png" style="position: absolute; top: 50%; right: 0; transform: translateY(-50%); width:80px;" />
                <!-- Bottom image -->
                <img src="images/quiz.png" style="position: absolute; bottom: 0; left: 50%; transform: translateX(-50%); width:80px;" />
                <!-- Left image -->
                <img src="images/flash-card.png" style="position: absolute; top: 50%; left: 0; transform: translateY(-50%); width:80px;" />
            </div>
        </MudStack>

    </MudItem>
</MudGrid>



<br/>
<br />

<MudText Typo="Typo.h3" Color="Color.Primary" Align="Align.Center" style="font-weight: bold;">
    <span style="color: white"> Why choose StudBud? </span>
</MudText>

<br />


<MudStack Row="true" Spacing="8" Class="ml-6 mt-8 mr-6" Justify="Justify.Center">
    <MudCard Style="border-radius: 16px;  width:350px; height:300px;" Elevation="4" Class="p-2">
        <MudCardContent>
            <MudText Typo="Typo.h6" Class="mb-2">FlashCards</MudText>
            <MudText Typo="Typo.body2">Turn your notes into interactive flashcards! </MudText>
            <MudText Typo="Typo.body2">Test your knowledge, track your progress, </MudText>
            <MudText Typo="Typo.body2">and learn faster with smart, </MudText>
            <MudText Typo="Typo.body2"> AI-generated quiz cards.</MudText>
        </MudCardContent>
        <MudCardActions>
            <MudButton Variant="Variant.Text" Color="Color.Primary" Href="/">Get Started</MudButton>
        </MudCardActions>
    </MudCard>

    <MudCard Style="border-radius: 16px;  width:350px; height:300px;" Elevation="4" Class="p-2" >
        <MudCardContent>
            <MudText Typo="Typo.h6" Class="mb-2">Work-Assistence</MudText>
            <MudText Typo="Typo.body2">Get AI-powered help with your homework. </MudText>
            <MudText Typo="Typo.body2"> Understand tricky concepts, </MudText>
            <MudText Typo="Typo.body2">get step-by-step explanations,  </MudText>
            <MudText Typo="Typo.body2"> and finish assignments with confidence.</MudText>
        </MudCardContent>
        <MudCardActions>
            <MudButton Variant="Variant.Text" Color="Color.Primary" Href="/">Get Started</MudButton>
        </MudCardActions>
    </MudCard>

    <MudCard Style="border-radius: 16px;  width:350px; height:300px;" Elevation="4" Class="p-2">
        <MudCardContent>
            <MudText Typo="Typo.h6" Class="mb-2">Quizzes</MudText>

            <MudText Typo="Typo.body2">AI turns your notes into personalized quizzes. </MudText>
            <MudText Typo="Typo.body2"> Reinforce what you’ve learned and test yourself effortlessly..</MudText>
        </MudCardContent>
        <MudCardActions>
            <MudButton Variant="Variant.Text" Color="Color.Primary" Href="/">Get Started</MudButton>
        </MudCardActions>
    </MudCard>
        <MudCard Style="border-radius: 16px;  width:350px; height:300px;" Elevation="4" Class="p-2">
        <MudCardContent>
            <MudText Typo="Typo.h6" Class="mb-2">Notes-Summury</MudText>

            <MudText Typo="Typo.body2">Use ai to write quick and effient notes. </MudText>
            <MudText Typo="Typo.body2"> Get summurized notes of quizes data and topics which need improvement from ai after every test</MudText>
        </MudCardContent>
        <MudCardActions>
            <MudButton Variant="Variant.Text" Color="Color.Primary" Href="/">Get Started</MudButton>
        </MudCardActions>
    </MudCard>

</MudStack>



<br/>
<br />
<br />

<MudText Typo="Typo.body1" Class="mt-5" Align="Align.Center">
    StudBud was created and is mantained by team TechPhantoms

</MudText>

@code {
    private Task OpenLoginDialog()
    {
        return Dialog.ShowAsync<LoginDialog>("",new DialogOptions()
        {

            CloseOnEscapeKey = true 
        });
    }
    private Task OpenSignupDialog()
    {
        return Dialog.ShowAsync<SignupDialog>("",new DialogOptions()
        {

            CloseOnEscapeKey = true 
        });
    }
}